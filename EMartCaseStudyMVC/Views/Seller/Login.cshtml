@model EMartCaseStudyMVC.Models.Seller

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>Seller</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="sname" class="control-label"></label>
                <input asp-for="sname" class="form-control" />
                <span asp-validation-for="sname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="spassword" class="control-label"></label>
                <input asp-for="spassword" class="form-control" />
                <span asp-validation-for="spassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
